<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Encuesta Dojo</title>
        <link rel="stylesheet" href="~/css/styles.css"/>
    </head>
    <body>
        <div class=formularioUsuario>
            <form method="POST" action="Result">
                <div class="datoPersonal">
                    <label for="Nombre" class="estiloLabel">Your Name: </label>
                    <input type="text" name="Nombre" class=cuadroTexto>
                </div>
                <div class="datoPersonal">
                    <label for="Ubicacion" class="estiloLabel">Dojo Location: </label>
                    <select name="Ubicacion" class=cuadroSelector>
                        @{
                            @foreach(string ciudad in ViewBag.Localizacion)
                            {
                                <option class="letra">@ciudad</option>
                            }
                        }
                    </select>
                </div>
                <div class="datoPersonal">
                    <label for="Lenguaje" class="estiloLabel">Favorite Language: </label>
                    <select name="Lenguaje" class=cuadroSelector>
                        @{
                            @foreach (string lenguaje in ViewBag.Lenguajes)
                            {
                                <option class="letra">@lenguaje</option>
                            }
                        }
                    </select>
                </div>
                <div class=datoComentario>
                    <label for="Comentario" class="estiloLabel">Comment (optional): </label>
                    <textarea name="Comentario" class="cuadroComentario"></textarea>
                </div>
                <div class="botonEnvio">
                    <button>Submit</button>
                </div>
            </form>
        </div>
    </body>
</html>